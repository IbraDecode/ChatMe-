<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#1A1A1A">

	<de.hdodenhof.circleimageview.CircleImageView
		android:id="@+id/iconImageView"
		android:layout_width="100dp"
		android:layout_height="100dp"
		android:src="@drawable/camera"
		app:civ_border_width="2dp"
		app:civ_border_color="#000000"
		app:civ_circle_background_color="#FFFFFF"
		app:civ_border_overlay="true"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintVertical_chainStyle="packed"
		app:layout_constraintBottom_toTopOf="@+id/textview1" />

	<TextView
		android:id="@+id/textview1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="30dp"
		android:padding="8dp"
		android:text="Add profile photo"
		android:textSize="18sp"
		android:textColor="#FFFFFF"
		app:layout_constraintTop_toBottomOf="@+id/iconImageView"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toTopOf="@+id/textview2" />

	<TextView
		android:id="@+id/textview2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:paddingBottom="8dp"
		android:gravity="center_horizontal|center_vertical"
		android:text="Add a profile photo so your friends know \nit\'s you."
		android:textSize="12sp"
		android:textColor="#9E9E9E"
		app:layout_constraintTop_toBottomOf="@+id/textview1"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toTopOf="@+id/txt_progressbar" />

	<TextView
		android:id="@+id/txt_progressbar"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:textSize="12sp"
		android:textColor="#9E9E9E"
		android:visibility="gone"
		app:layout_constraintTop_toBottomOf="@+id/textview2"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toTopOf="@+id/textview5" />

	<TextView
		android:id="@+id/textview5"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="8dp"
		android:paddingRight="8dp"
		android:paddingBottom="8dp"
		android:text="failed to image upload please try again."
		android:textSize="11sp"
		android:textColor="#FF6F61"
		android:visibility="gone"
		app:layout_constraintTop_toBottomOf="@+id/txt_progressbar"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toTopOf="@+id/imagePickerButton" />

	<com.google.android.material.button.MaterialButton
		android:id="@+id/imagePickerButton"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="30dp"
		android:layout_marginRight="20dp"
		android:padding="8dp"
		android:text="Add a photo"
		android:textColor="#FFFFFF"
		android:textSize="14sp"
		app:backgroundTint="#7C9A92"
		app:cornerRadius="8dp"
		app:layout_constraintTop_toBottomOf="@+id/textview5"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toTopOf="@+id/skipButton" />

	<ProgressBar
		android:id="@+id/progressbar1"
		android:layout_width="25dp"
		android:layout_height="35dp"
		android:indeterminate="true"
		android:visibility="gone"
		app:layout_constraintTop_toTopOf="@+id/imagePickerButton"
		app:layout_constraintBottom_toBottomOf="@+id/imagePickerButton"
		app:layout_constraintStart_toStartOf="@+id/imagePickerButton"
		app:layout_constraintEnd_toEndOf="@+id/imagePickerButton" />

	<com.google.android.material.button.MaterialButton
		android:id="@+id/skipButton"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:text="Skip"
		android:textColor="#488395"
		android:textSize="16sp"
		style="@style/Widget.MaterialComponents.Button.TextButton"
		app:layout_constraintTop_toBottomOf="@+id/imagePickerButton"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

